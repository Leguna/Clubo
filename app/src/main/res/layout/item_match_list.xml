<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_match"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Leguna Vs Makana"
            android:textSize="18sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            tools:text="0"
            android:textSize="36sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/textView3"
            card_view:layout_constraintEnd_toStartOf="@+id/textView3"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/tv_score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="110dp"
            tools:text="0"
            android:textSize="36sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/textView3"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/textView3"
            card_view:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            tools:text="13 Round"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="@+id/textView3"
            card_view:layout_constraintStart_toStartOf="@+id/textView3"
            card_view:layout_constraintTop_toBottomOf="@+id/textView3"
            card_view:layout_constraintVertical_bias="0.388" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2019-10-01"
            card_view:layout_constraintBottom_toBottomOf="@+id/tv_round"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_round"
            card_view:layout_constraintHorizontal_bias="0.449"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/tv_round" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="13:12:10 AM"
            card_view:layout_constraintBottom_toBottomOf="@+id/tv_round"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/tv_round"
            card_view:layout_constraintTop_toTopOf="@+id/tv_round" />

        <ImageView
            android:id="@+id/iv_badge"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/tv_score"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_score"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/tv_score"
            android:contentDescription="@string/home_team"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/iv_badge2"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/tv_score2"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/tv_score2"
            card_view:layout_constraintTop_toTopOf="@+id/tv_score2"
            android:contentDescription="@string/away_team"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>